  "shortcuts": [
    {
      "name": "Add Expense",
      "short_name": "Add",
      "description": "Quickly add a new expense",
      "url": "/add?shortcut=true",
      "icons": [
        {
          "src": "/shortcut-add-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Scan Receipt",
      "short_name": "Scan",
      "description": "Scan a receipt with camera",
      "url": "/scan?shortcut=true",
      "icons": [
        {
          "src": "/shortcut-scan-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "View Reports",
      "short_name": "Reports",
      "description": "View expense reports and analytics",
      "url": "/reports?shortcut=true",
      "icons": [
        {
          "src": "/shortcut-reports-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf"]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+pew",
      "url": "/handle-protocol?url=%s"
    }
  ],
  
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
